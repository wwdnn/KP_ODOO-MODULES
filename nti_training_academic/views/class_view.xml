<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data noupdate="0">

    <!-- List View -->
    <record model="ir.ui.view" id="class_view_tree">
      <field name="name">class.tree</field>
      <field name="model">class.class</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="user_id"/>
          <field name="date"/>
        </tree>
      </field>
    </record>
    <!-- End List View -->

    <!-- Form View -->
    <record model="ir.ui.view" id="class_view_form">
      <field name="name">class.form</field>
      <field name="model">class.class</field>
      <field name="arch" type="xml">
        <!-- Form -->
        <form>
          <header>
          </header>
          <!-- Sheet Form -->
          <sheet>
            <div class="oe_title">
              <h1>
                <field name="name" />
              </h1>
            </div>

            <group>
              <field name="date"/>
              <field name="user_id"/>
            </group>

            <!-- Tab Bar -->
            <notebook>
              <page string="Students">
                <field name="student_ids" domain="[('is_lecturer', '=', False)]">
                  <tree>
                    <field name="name"/>
                    <field name="phone"/>
                    <field name="email"/>
                  </tree>
                </field>
              </page>
              <page string="Subjects">
                <field name="subject_line_ids">
                  <tree editable="bottom">
                    <field name="subject_id"/>
                    <field name="lecturer_id"/>
                    <field name="start_hour" widget="float_time"/>
                    <field name="end_hour" widget="float_time"/>
                  </tree>
                </field>
              </page>
            </notebook>
            <!-- End Tab Bar -->
          </sheet>
          <!-- End Sheet Form -->
        </form>
        <!-- End Form -->
      </field>
    </record>
    <!-- End Form View -->

  </data>
</odoo>
