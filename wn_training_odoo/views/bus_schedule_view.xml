<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

    <!-- List View -->
    <record model="ir.ui.view" id="bus_schedule_tree">
      <field name="name">bus.schedule.tree</field>
      <field name="model">bus.schedule</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="schedule"/>
          <field name="payment_type"/>
          <field name="departure"/>
          <field name="arrival"/>
          <field 
            name="state"
            widget="badge"
            decoration-muted="state == 'draft'"
            decoration-info="state in ['submit', 'run']"
            decoration-success="state == 'done'"
          />
        </tree>
      </field>
    </record>
    <!-- End List View -->

    <!-- Form View -->
    <record model="ir.ui.view" id="bus_schedule_form">
      <field name="name">bus.schedule.form</field>
      <field name="model">bus.schedule</field>
      <field name="arch" type="xml">
        <!-- Form -->
        <form>
          <header>
            <field name="state" widget="statusbar"/>
            <button 
                name="button_submit"
                string="Submit"
                type="object"
                class="oe_highlight"
                attrs="{'invisible': [('state', '!=', 'draft')]}"
            />
            <button 
                name="button_run"
                string="Run"
                type="object"
                class="oe_highlight"
                attrs="{'invisible': [('state', '!=', 'submit')]}"
            />
            <button 
                name="button_done"
                string="Done"
                type="object"
                class="oe_highlight"
                attrs="{'invisible': [('state', '!=', 'run')]}"
            />
          </header>
          <!-- Sheet Form -->
          <sheet>
            <div class="oe_title">
              <h1>
                <field name="name" />
              </h1>
            </div>

            <group>
              <field 
                  name="bus_id" 
                  attrs="{'readonly': [('state', '!=', 'draft')]}"
                  domain="[('state', '=', 'ready')]"
              />
              <field 
                  name="capacity" 
                  attrs="{'readonly': [('state', '!=', 'draft')]}"
              />
              <field 
                  name="schedule" 
                  attrs="{'readonly': [('state', '!=', 'draft')]}"
              />
              <field 
                  name="payment_type" 
                  attrs="{'readonly': [('state', '!=', 'draft')]}"
              />
              <field 
                  name="departure" 
                  attrs="{'readonly': [('state', '!=', 'draft')]}"
              />
              <field 
                  name="arrival" 
                  attrs="{'readonly': [('state', '!=', 'draft')]}"
              />
            </group>

            <!-- Tab Bar -->
            <notebook>
              <page string="Passenger">
                <field 
                  name="passenger_ids"
                  attrs="{'readonly': [('state', '!=', 'draft')]}"
                >
                  <tree>
                    <field name="name"/>
                    <field name="gender"/>
                  </tree>
                </field>
              </page>
              <page string="Baggage">
                <field 
                  name="baggage_line_ids"
                  attrs="{'readonly': [('state', '!=', 'draft')]}"
                >
                  <tree editable="bottom">
                    <field name="name"/>
                    <field name="weight"/>
                  </tree>
                </field>
              </page>
            </notebook>
            <!-- End Tab Bar -->
          </sheet>
          <!-- End Sheet Form -->
          <!-- Logging -->
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers"/>
            <field name="message_ids" widget="mail_thread"/>
            <field name="activity_ids" widget="mail_activity"/>
          </div>
          <!-- End Logging -->
        </form>
        <!-- End Form -->
      </field>
    </record>
    <!-- End Form View -->

    <!-- Search View -->
    <record model="ir.ui.view" id="bus_schedule_search">
        <field name="name">bus.schedule.search</field>
        <field name="model">bus.schedule</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/> 
                <field name="bus_id"/>
                <!-- Filter -->
                <filter name="state" string="Schedule Draft" domain="[('state','=', 'draft')]"/>
                <filter name="state" string="Schedule Submitted" domain="[('state','=', 'submit')]"/>
                <filter name="state" string="Schedule On Going" domain="[('state','=', 'run')]"/>
                <filter name="state" string="Schedule Done" domain="[('state','=', 'done')]"/>

                <!-- Group By -->
                <group>
                    <filter name="bus_id" string="Bus" context="{'group_by':'bus_id'}"/>
                    <filter name="state" string="Status" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>
    <!-- End Search View -->

  </data>
</odoo>