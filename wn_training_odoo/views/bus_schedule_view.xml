<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

    <!-- List View -->
    <record model="ir.ui.view" id="bus_schedule_tree">
      <field name="name">bus.schedule.tree</field>
      <field name="model">bus.schedule</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="schedule"/>
          <field name="payment_type"/>
          <field name="departure"/>
          <field name="arrival"/>
          <field name="state"/>
        </tree>
      </field>
    </record>
    <!-- End List View -->

    <!-- Form View -->
    <record model="ir.ui.view" id="bus_schedule_form">
      <field name="name">bus.schedule.form</field>
      <field name="model">bus.schedule</field>
      <field name="arch" type="xml">
        <!-- Form -->
        <form>
          <header>
            <field name="state" widget="statusbar"/>
            <button 
                name="button_submit"
                string="Submit"
                type="object"
                class="oe_highlight"
                attrs="{'invisible': [('state', '!=', 'draft')]}"
            />
            <button 
                name="button_run"
                string="Run"
                type="object"
                class="oe_highlight"
                attrs="{'invisible': [('state', '!=', 'submit')]}"
            />
            <button 
                name="button_done"
                string="Done"
                type="object"
                class="oe_highlight"
                attrs="{'invisible': [('state', '!=', 'run')]}"
            />
          </header>
          <!-- Sheet Form -->
          <sheet>
            <div class="oe_title">
              <h1>
                <field name="name" />
              </h1>
            </div>

            <group>
              <field 
                  name="bus_id" 
                  attrs="{'readonly': [('state', '!=', 'draft')]}"
                  domain="[('state', '=', 'ready')]"
              />
              <field 
                  name="capacity" 
                  attrs="{'readonly': [('state', '!=', 'draft')]}"
              />
              <field 
                  name="schedule" 
                  attrs="{'readonly': [('state', '!=', 'draft')]}"
              />
              <field 
                  name="payment_type" 
                  attrs="{'readonly': [('state', '!=', 'draft')]}"
              />
              <field 
                  name="departure" 
                  attrs="{'readonly': [('state', '!=', 'draft')]}"
              />
              <field 
                  name="arrival" 
                  attrs="{'readonly': [('state', '!=', 'draft')]}"
              />
            </group>

            <!-- Tab Bar -->
            <notebook>
              <page string="Passenger">
                <field 
                  name="passenger_ids"
                  attrs="{'readonly': [('state', '!=', 'draft')]}"
                >
                  <tree>
                    <field name="name"/>
                    <field name="gender"/>
                  </tree>
                </field>
              </page>
              <page string="Baggage">
                <field 
                  name="baggage_line_ids"
                  attrs="{'readonly': [('state', '!=', 'draft')]}"
                >
                  <tree editable="bottom">
                    <field name="name"/>
                    <field name="weight"/>
                  </tree>
                </field>
              </page>
            </notebook>
            <!-- End Tab Bar -->
          </sheet>
          <!-- End Sheet Form -->
        </form>
        <!-- End Form -->
      </field>
    </record>
    <!-- End Form View -->

  </data>
</odoo>