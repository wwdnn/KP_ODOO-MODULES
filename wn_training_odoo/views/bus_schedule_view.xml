<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

    <!-- List View -->
    <record model="ir.ui.view" id="bus_schedule_tree">
      <field name="name">bus.schedule.tree</field>
      <field name="model">bus.schedule</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="schedule"/>
          <field name="payment_type"/>
          <field name="departure"/>
          <field name="arrival"/>
        </tree>
      </field>
    </record>
    <!-- End List View -->

    <!-- Form View -->
    <record model="ir.ui.view" id="bus_schedule_form">
      <field name="name">bus.schedule.form</field>
      <field name="model">bus.schedule</field>
      <field name="arch" type="xml">
        <!-- Form -->
        <form>
          <header>
          </header>
          <!-- Sheet Form -->
          <sheet>
            <div class="oe_title">
              <h1>
                <field name="name" />
              </h1>
            </div>

            <group>
              <field name="bus_id"/>
              <field name="capacity"/>
              <field name="schedule"/>
              <field name="payment_type"/>
              <field name="departure"/>
              <field name="arrival"/>
            </group>

            <!-- Tab Bar -->
            <notebook>
              <page string="Passenger">
                <field name="passenger_ids">
                  <tree>
                    <field name="name"/>
                    <field name="gender"/>
                  </tree>
                </field>
              </page>
              <page string="Baggage">
                <field name="baggage_line_ids">
                  <tree editable="bottom">
                    <field name="name"/>
                    <field name="weight"/>
                  </tree>
                </field>
              </page>
            </notebook>
            <!-- End Tab Bar -->
          </sheet>
          <!-- End Sheet Form -->
        </form>
        <!-- End Form -->
      </field>
    </record>
    <!-- End Form View -->

  </data>
</odoo>