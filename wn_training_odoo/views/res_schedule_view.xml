<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <!-- List View -->
    <record model="ir.ui.view" id="res_schedule_tree">
      <field name="name">res.schedule.tree</field>
      <field name="model">res.schedule</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="schedule"/>
          <field name="payment_type"/>
          <field name="departure"/>
          <field name="arrival"/>
        </tree>
      </field>
    </record>

    <!-- Form View -->
    <record model="ir.ui.view" id="res_schedule_form">
      <field name="name">res.schedule.form</field>
      <field name="model">res.schedule</field>
      <field name="arch" type="xml">
        <form>
          <header>
          </header>
          <sheet>
            <div class="oe_title">
              <h1>
                <field name="name" />
              </h1>
            </div>

            <group>
              <field name="schedule"/>
              <field name="payment_type"/>
              <field name="departure"/>
              <field name="arrival"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

  </data>
</odoo>