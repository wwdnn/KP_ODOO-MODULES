<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
  
    <!-- List View -->
    <record model="ir.ui.view" id="res_passenger_tree">
      <field name="name">res.passenger.tree</field>
      <field name="model">res.passenger</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="weight"/>
          <field name="height"/>
        </tree>
      </field>
    </record>
    <!-- End List View -->

    <!-- Form View -->
    <record model="ir.ui.view" id="res_passenger_form">
      <field name="name">res.passenger.form</field>
      <field name="model">res.passenger</field>
      <field name="arch" type="xml">
        <!-- Form -->
        <form>
          <header>
          </header>
          <!-- Sheet Form -->
          <sheet>
            <div class="oe_title">
              <h1>
                <field name="name" />
              </h1>
            </div>

            <group>
              <field name="weight"/>
              <field name="height"/>
              <field name="born_date"/>
            </group>
          </sheet>
          <!-- End Sheet Form -->
          <!-- Logging -->
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers"/>
            <field name="message_ids" widget="mail_thread"/>
            <field name="activity_ids" widget="mail_activity"/>
          </div>
          <!-- End Logging -->
        </form>
        <!-- End Form -->
      </field>
    </record>
    <!-- End Form View -->

  </data>
</odoo>