<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <!-- List View -->
    <record model="ir.ui.view" id="res_passenger_tree">
      <field name="name">res.passenger.tree</field>
      <field name="model">res.passenger</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="weight"/>
          <field name="height"/>
        </tree>
      </field>
    </record>

    <!-- Form View -->
    <record model="ir.ui.view" id="res_passenger_form">
      <field name="name">res.passenger.form</field>
      <field name="model">res.passenger</field>
      <field name="arch" type="xml">
        <form>
          <header>
          </header>
          <sheet>
            <div class="oe_title">
              <h1>
                <field name="name" />
              </h1>
            </div>

            <group>
              <field name="weight"/>
              <field name="height"/>
              <field name="born_date"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

  </data>
</odoo>